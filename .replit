modules = ["python-3.11", "nodejs-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend React"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python main.py"
waitForPort = 8000

[[workflows.workflow]]
name = "Frontend React"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && npm start"
waitForPort = 5000

[[workflows.workflow]]
name = "Backend Server"
author = 48065040
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -u main.py"

[[workflows.workflow]]
name = "CRM HRMS System"
author = 48065040
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python -u main.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && GENERATE_SOURCEMAP=false PORT=3000 npm start"

[[workflows.workflow]]
name = "CRM HRMS Full Stack"
author = 48065040
mode = "parallel"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd backend && python main.py"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd frontend && PORT=3001 GENERATE_SOURCEMAP=false BROWSER=none npm start"

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8000
externalPort = 8000

[[ports]]
localPort = 37389
externalPort = 3002

[deployment]
deploymentTarget = "vm"
run = ["bash", "-c", "cd backend && python main.py & cd frontend && npx serve -s build -l 5000 --no-clipboard"]
build = ["bash", "-c", "cd frontend && npm run build"]
